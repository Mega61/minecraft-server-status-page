# Portainer Configuration
# URL of your Portainer instance (usually http://localhost:9000 or https://localhost:9443)
PORTAINER_URL=http://localhost:9000

# Portainer API Key (see SETUP.md for instructions on how to generate)
PORTAINER_API_KEY=your_api_key_here

# Container ID or name of your Minecraft server in Portainer
# You can find this in Portainer > Containers list
PORTAINER_CONTAINER_ID=minecraft-server

# SSL Certificate Verification (only needed if using HTTPS with self-signed certificate)
# Set to 'false' if you're using https://localhost:9443 with a self-signed certificate
# Leave as 'true' or omit for proper SSL verification (recommended for production)
# PORTAINER_REJECT_UNAUTHORIZED=false

# Portainer Endpoint ID (find in Portainer > Environments)
# Usually '1' or '2' - check your Portainer UI to find the correct ID
PORTAINER_ENDPOINT_ID=2

# Minecraft Server Configuration
# IP address of your Minecraft server (use 'localhost' if on same machine)
MINECRAFT_HOST=localhost

# Minecraft server port (default is 25565)
MINECRAFT_PORT=25565

# Auto-Shutdown Configuration
# Time in minutes of inactivity before shutting down the server
INACTIVITY_TIMEOUT_MINUTES=15

# How often to check for player activity (in minutes)
ACTIVITY_CHECK_INTERVAL_MINUTES=5

# Server display name (shown in the UI)
SERVER_DISPLAY_NAME=KUMAFORCE

# Optional: Server domain/IP to display to players
# Leave empty to show MINECRAFT_HOST:MINECRAFT_PORT
SERVER_DISPLAY_ADDRESS=PLAY.KUMAFORCE.NET
